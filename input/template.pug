.input(:class="states")
  label(:for="'input' + _uid").input__label
    slot
  .input__wrapper
    template(v-if="$slots.before")
      .input__before
        slot(name="before")
    input(:id="'input' + _uid").input__control(
      :type="type",
      :autofocus="autofocus",
      :placeholder="placeholder",
      :disabled="disabled",
      :value="value",
      @focus="focus = true",
      @blur="focus = false",
      @input="input"
      )
    template(v-if="$slots.after")
      .input__after
        slot(name="after")
